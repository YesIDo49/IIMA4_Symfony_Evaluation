{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ cart.state ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Purchase_date</th>
                <td>{{ cart.purchaseDate ? cart.purchaseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <h2>Cart Contents</h2>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>

            {% if cart.cartContents is empty %}
                <tr>
                    <td colspan="4">Your cart is empty</td>
                </tr>
            {% endif %}

            {% if cartContents is not empty %}
                {% for cartContent in cartContents %}
                <tr>
                    <td>
                        <img src="{{ asset('uploads/'~ cartContent.product.photo) }}" alt="{{ cartContent.product.name }}" style="width: 50px;">
                    </td>
                    <td>{{ cartContent.product.name }}</td>
                    <td>{{ cartContent.quantity }}</td>
                    <td>{{ cartContent.product.price }}</td>
                </tr>
                {% endfor %}
        </tbody>
    </table>
    <h3>Total :</h3>
    <p>{{ total }} â‚¬</p>
    {% endif %}

    <a href="{{ path('app_cart_pay', {'id': cart.id}) }}">pay</a>

    <a href="{{ path('app_cart_index') }}">back to list</a>

    <a href="{{ path('app_cart_edit', {'id': cart.id}) }}">edit</a>

    {{ include('cart/_delete_form.html.twig') }}
{% endblock %}
