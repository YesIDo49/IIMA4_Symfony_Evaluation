{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ cart.state ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Purchase_date</th>
                <td>{{ cart.purchaseDate ? cart.purchaseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <h2>Cart Contents</h2>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price unit</th>
                <th>Total price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            {% if cart.cartContents is empty %}
                <tr>
                    <td colspan="5">Your cart is empty</td>
                </tr>
            {% endif %}

            {% if cartContents is not empty %}
                {% for cartContent in cartContents %}
                <tr>
                    <td>
                        <img src="{{ asset('uploads/'~ cartContent.product.photo) }}" alt="{{ cartContent.product.name }}" style="width: 50px;">
                    </td>
                    <td>{{ cartContent.product.name }}</td>
                    <td>{{ cartContent.quantity }}</td>
                    <td>
                        {% if cartContent.quantity > 1 %}
                            <a href="{{ path('app_cart_content_minus', {'id': cartContent.id}) }}" class="btn btn-primary">-</a>
                        {% endif %}
                        {{ cartContent.quantity }}
                        <a href="{{ path('app_cart_content_plus', {'id': cartContent.id}) }}" class="btn btn-primary">+</a>
                    </td>
                    <td>{{ cartContent.product.price }} €</td>
                    <td>{{ cartContent.product.price * cartContent.quantity }} €</td>
                    <td>{{ include('/cart_content/_delete_form.html.twig') }}</td>
                </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
    {% if cartContents is not empty %}
        <h3>Total :</h3>
        <p>{{ total }} €</p>
        <a class="btn btn-primary" href="{{ path('app_cart_pay', {'id': cart.id}) }}">Pay</a>
    {% endif %}


    <a class="btn btn-primary" href="{{ path('app_cart_index') }}">Continue shopping</a>

{% endblock %}
