{% extends 'base.html.twig' %}

{% block title %}{{ 'super_admin.title' | trans }}{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1 class="title"><span><img src="{{ asset('img/icons/icon-stick.png') }}" alt="title-icon"></span>{{ 'super_admin.dashboard' | trans }}</h1>

    <h2 class="subtitle"><span><img src="{{ asset('img/icons/icon-lollipop.png') }}" alt="title-icon"></span>{{ 'super_admin.users.all' | trans }}</h2>
    <table class="table">
        <thead>
        <tr>
            <th>{{ 'user.id' | trans }}</th>
            <th>{{ 'user.name' | trans }}</th>
            <th>{{ 'user.firstname' | trans }}</th>
            <th>{{ 'user.email' | trans }}</th>
            <th>{{ 'user.date_of_registration' | trans }}</th>
        </tr>
        </thead>
        <tbody>

        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.registrationDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2 class="subtitle"><span><img src="{{ asset('img/icons/icon-lollipop.png') }}" alt="title-icon"></span>{{ 'super_admin.users.today' | trans }}</h2>
    <table class="table">
        <thead>
        <tr>
            <th>{{ 'user.id' | trans }}</th>
            <th>{{ 'user.name' | trans }}</th>
            <th>{{ 'user.firstname' | trans }}</th>
            <th>{{ 'user.email' | trans }}</th>
            <th>{{ 'user.date_of_registration' | trans }}</th>
        </tr>
        </thead>
        <tbody>

        {% if todayUsers is empty %}
        <tr>
            <td colspan="5">{{ 'super_admin.users.empty' | trans }}</td>
        </tr>
        {% else %}
            {% for todayUser in todayUsers %}
                <tr>
                    <td>{{ todayUser.id }}</td>
                    <td>{{ todayUser.name }}</td>
                    <td>{{ todayUser.firstname }}</td>
                    <td>{{ todayUser.email }}</td>
                    <td>{{ todayUser.registrationDate|date('Y-m-d H:i:s') }}</td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

    <h2 class="subtitle"><span><img src="{{ asset('img/icons/icon-lollipop.png') }}" alt="title-icon"></span>{{ 'super_admin.ongoing_carts' | trans }}</h2>
    <table class="table">
        <thead>
        <tr>
            <th>{{ 'cart.id' | trans }}</th>
            <th>{{ 'cart.user' | trans }}</th>
            <th>{{ 'cart.email' | trans }}</th>
            <th>{{ 'cart.actions' | trans }}</th>
        </tr>
        </thead>
        <tbody>

        {% for cart in carts %}
            <tr>
                <td>{{ cart.id }}</td>
                <td>{{ cart.user.name }} {{ cart.user.firstname }}</td>
                <td>{{ cart.user.email }}</td>
                
                <td><a href="{{ path('app_cart_show', {'id': cart.id}) }}" class="btn btn-secondary">{{ 'cart.show' | trans }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
