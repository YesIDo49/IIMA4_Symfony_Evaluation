{% extends 'base.html.twig' %}

{% block title %}My account{% endblock %}

{% block body %}
    <h1>My account</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>State</th>
                <th>Purchase_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        <h2>Order History</h2>
        {% for cart in carts %}
            {% if cart %}
                <tr>
                    <td>{{ cart.id }}</td>
                    <td>{{ cart.state ? 'Yes' : 'No' }}</td>
                    <td>{{ cart.purchaseDate ? cart.purchaseDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_cart_show', {'id': cart.id}) }}">show</a>
                        <a href="{{ path('app_cart_edit', {'id': cart.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

{#    <a href="{{ path('app_cart_new') }}">Create new</a>#}
{% endblock %}
