<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/2b02a79d23.js" crossorigin="anonymous"></script>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <header>

        <nav class="navbar">
                <div class="navbar__logo">
                    <a href="{{ path('app_product_index') }}" class="navbar__logo__img">
                        <img src="{{ asset('img/logo/logo.png') }}" alt="logo">
                        <img src="{{ asset('img/logo/brand-logo.png') }}" alt="brand-logo">
                    </a>
                    {% if app.user is not null %}
                        <div class="navbar__logo__user">
                            <p>Hello,</p>
                            <p>{{ app.user.firstname }}!</p>
                        </div>
                    {% endif %}
                </div>
                <ul class="navbar__menu">
                    <li><a href="{{ path('app_product_index') }}"><i class="fa-solid fa-shop"></i> Shop</a></li>
                    <li><a href="{{ path('app_cart_index') }}"><i class="fa-solid fa-cart-shopping"></i> Cart</a></li>
                    {% if app.user is not null %}
                        <li><a href="{{ path('app_cart_account') }}"><i class="fa-solid fa-user"></i> Account</a></li>
                    {% endif %}
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <li><a href="{{ path('app_super_admin_index') }}"><i class="fa-solid fa-table-columns"></i> Dashboard</a></li>
                    {% endif %}
                    {% if app.user is not null %}
                        <li><a href="{{ path('app_logout') }}"><i class="fa-solid fa-arrow-right-from-bracket"></i> Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}"><i class="fa-solid fa-arrow-right-to-bracket"></i> Log in</a></li>
                        <li><a href="{{ path('app_register') }}"><i class="fa-solid fa-user-plus"></i> Register</a></li>
                    {% endif %}
                </ul>
        </nav>
    </header>
        {% for type, messages in app.flashes %}
            {% for m in messages %}
                <p class="alert alert-{{type}} ">{{ m }}</p>
            {% endfor %}
        {% endfor %}
    <main>
        {% block body %}{% endblock %}
    </main>
    <footer class="footer">
        <div class="footer__banner">
            <img src="{{ asset('img/banner/footer.png') }}" alt="footer-img">
        </div>
        <div class="footer__content">
            <p>This website is inspired by the Kirby Café</p>
            <p>Owned by Nintendo / HAL Laboratory, Inc.</p>
        </div>
    </footer>
    </body>
</html>
